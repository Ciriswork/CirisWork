  <script>
    function handleSubmit(e){
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const message = document.getElementById('message').value.trim();
      const result = document.getElementById('formResult');

      if(!name || !email || !message){ result.textContent = 'Mohon isi semua field.'; return }
      // Simple client-side email send: open mail client. Replace with AJAX to backend when ready.
      const subject = encodeURIComponent('Permintaan dari website — ' + name);
      const body = encodeURIComponent('Nama: ' + name + '\nEmail: ' + email + '\n\n' + message);
      window.location.href = `mailto:info@perusahaan.com?subject=${subject}&body=${body}`;
      result.textContent = 'Membuka aplikasi email Anda... Jika tidak terjadi apa-apa, silakan hubungi sales@perusahaan.com';
    }
  </script>
